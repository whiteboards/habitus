{{#form-card
  class='is-one-half'
  actionEvent=(action "saveUser" model)
  model=model
  title='Edit User'
  primaryType='submit'
  primaryText='Save'
  secondaryAction="cancel"
  secondaryText='Cancel'
  isInProgress=isInProgress}}
  <label class="label title is-5">New Password</label>
  <p class="control">
    {{input class="input" type="password" name='title' value=model.password placeholder="Enter password"}}
  </p>
  <label class="label title is-5">Confirm New Password</label>
  <p class="control">
    {{input class="input" type="password" name='title' value=model.passwordConfirmation placeholder="Enter password"}}
  </p>
  {{yield}}
{{/form-card}}
